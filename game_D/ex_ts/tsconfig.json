{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    // Environnement web moderne
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],

    // Debug
    "sourceMap": true,

    // TypeScript strict
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Vite + SPA friendly
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  }
}
